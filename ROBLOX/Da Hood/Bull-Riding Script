getgenv().ToggleBind = "Q"


local BullControls = game:GetService("Players").LocalPlayer.PlayerGui.MainScreenGui.BullControls
local Riding = false
local Left, Down, Up, Right = "Left", "Down", "Up", "Right"

game:GetService("UserInputService").InputBegan:Connect(function(input)
    if input.KeyCode == Enum.KeyCode[getgenv().ToggleBind] then
        Riding = (not Riding)
    end
end)

while wait() do
    if Riding then
        for _, Control in ipairs(BullControls:GetChildren()) do
            task.spawn(function()
                if Control.Name == Up and Control.ImageColor3 == Color3.fromRGB(255,0,0) then
                    keypress(0x57)
                    repeat wait() until Control.ImageColor3 ~= Color3.fromRGB(255,0,0)
                    keyrelease(0x57)
                elseif Control.Name == Down and Control.ImageColor3 == Color3.fromRGB(255,0,0) then
                    keypress(0x53)
                    repeat wait() until Control.ImageColor3 ~= Color3.fromRGB(255,0,0)
                    keyrelease(0x53)
                elseif Control.Name == Left and Control.ImageColor3 == Color3.fromRGB(255,0,0) then
                    keypress(0x41)
                    repeat wait() until Control.ImageColor3 ~= Color3.fromRGB(255,0,0)
                    keyrelease(0x41)
                elseif Control.Name == Right and Control.ImageColor3 == Color3.fromRGB(255,0,0) then
                    keypress(0x44)
                    repeat wait() until Control.ImageColor3 ~= Color3.fromRGB(255,0,0)
                    keyrelease(0x44)
                end
            end)
        end
    end
end
